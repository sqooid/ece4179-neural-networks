#!/usr/bin/env bash
set -e
if [[ ! -d "/home/lucas/code/ece4179-neural-networks" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/lucas/code/ece4179-neural-networks")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/lucas/code/ece4179-neural-networks" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/lucas/code/ece4179-neural-networks/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/lucas/code/ece4179-neural-networks/.envrc" "/home/lucas/code/ece4179-neural-networks/.direnv"/*.rc
